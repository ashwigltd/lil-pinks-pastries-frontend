{
    "javascript.format.enable": false,
    "javascript.validate.enable": false,
    "typescript.format.enable": false,
    "typescript.validate.enable": false,
    "[vue]": {
        "gitlens.codeLens.scopes": [
            "document"
        ],
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        },
        "editor.tabSize": 2
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        },
        "editor.tabSize": 2
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll": true
        },
        "editor.tabSize": 2
    },
    "files.associations": {
        "*.js": "javascriptreact",
        ".env.*": "env",
    },
    "eslint.format.enable": true,
    "eslint.options": {
        "configFile": ".eslintrc.js"
    },
    "eslint.packageManager": "npm",
    "eslint.validate": [
        "javascript",
        "html",
        "vue"
    ],
    "vetur.format.defaultFormatter.html": "prettier",
    "eslint.nodePath": "/home/ahellwig/.nvm/versions/node/v14.18.1/bin/node",
    "npm.packageManager": "npm",
    /* ---- General Editor ---- */
    // Spell Checker
    "cSpell.ignorePaths": [
        "package-lock.json",
        "package.json",
        "node_modules",
        "vscode-extension",
        ".git/objects",
        ".vscode",
        ".vscode-insiders",
        "gatsby-*.js"
    ],
    "cSpell.ignoreWords": [
        "ashwig",
        "fontsource",
        "formbuilder",
        "frontmatter",
        "vuetify"
    ],
    "cSpell.words": [
        "Formik",
        "Insta"
    ]
}